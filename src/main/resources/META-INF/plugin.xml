<idea-plugin require-restart="false">
  <id>su.nlq.idea.ExternalizableGenerator</id>
  <name>Externalizable Generator</name>
  <description>Externalizable code generator</description>
  <description><![CDATA[
The plugin helps to improve serialization process performance allowing to generate <a href="https://docs.oracle.com/javase/8/docs/api/java/io/Externalizable.html">externalizable</a> code for Java classes. Easy and safe.
    ]]></description>
  <category>Code tools</category>
  <vendor url="nlq.su">Anton Potsyus</vendor>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.java</depends>
  <actions>
    <action id="su.nlq.idea.externalizable.GenerateAction" class="su.nlq.idea.externalizable.GenerateAction"
            text="Externalizable" description="Generate externalizable code">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
    </action>
  </actions>
</idea-plugin>